<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Internet permission for network access -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fyp"
        tools:targetApi="31">
        <activity
            android:name=".ProgressTrackingActivity"
            android:exported="false" />
        <activity
            android:name=".JobInsightsActivity"
            android:exported="false" />
        <activity
            android:name=".ResumeActivity"
            android:exported="false" />
        <activity
            android:name=".CommunityForumActivity"
            android:exported="false" />
        <activity
            android:name=".CareerPathVisualizationActivity"
            android:exported="false" />
        <activity
            android:name=".RecommendationsActivity"
            android:exported="false" />
        <activity
            android:name=".SkillAssessmentActivity"
            android:exported="false" />
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".UpdatePasswordActivity"
            android:exported="false" />
        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="false" /> <!-- Login Activity with Launcher Intent Filter -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Sign-Up Activity Declaration -->
        <activity
            android:name=".SignUpActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan|adjustResize" /> <!-- Home Activity Declaration -->
        <activity
            android:name=".HomeActivity"
            android:exported="true" />
        

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>